generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("POSTGRES_PRISMA_URL")
    directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Pokemon {
    id          Int      @id @default(autoincrement())
    pokedexId   Int      @unique
    name        String
    imgUrl      String
    shinyImgUrl String?
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
    weight      Float?
    height      Float?
    hp          Int?
    attack      Int?
    defense     Int?
    spAttack    Int?
    spDefense   Int?
    speed       Int?
    category    String?
    type        String[]

    @@index([name, pokedexId])
}

model User {
    id        String   @id @default(cuid())
    email     String   @unique
    password  String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
